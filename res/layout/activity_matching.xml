<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <ImageView
            android:id="@+id/match_sky"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/match_sky" />
		<ImageView
		    android:id="@+id/match_wave_l"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_alignParentLeft="true"
		    android:scaleType="centerInside"
		    android:layout_marginTop="90dp"
		    android:src="@drawable/match_wave" />
		<ImageView
		    android:id="@+id/match_wave_r"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_alignParentRight="true"
		    android:scaleType="centerInside"
		    android:layout_marginTop="90dp"
		    android:src="@drawable/match_wave" />
		<ImageView
		    android:id="@+id/match_sea"
		    android:layout_width="fill_parent"
		    android:layout_height="500dp"
		    android:scaleType="centerCrop"
		    android:layout_alignParentBottom="true"
		    android:maxHeight="20dp"
		    android:src="@drawable/match_sea" />
		<ImageView
		    android:id="@+id/match_buble"
		    android:layout_width="300dp"
		    android:layout_height="300dp"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:scaleType="centerCrop"
		    android:src="@drawable/match_buble" />
		
		<ImageView
		    android:id="@+id/match_xia"
		    android:layout_width="100dp"
		    android:layout_height="100dp"
		    android:layout_centerInParent="true"
		    android:scaleType="centerCrop"
		    android:src="@drawable/match_xia" />



</RelativeLayout>
