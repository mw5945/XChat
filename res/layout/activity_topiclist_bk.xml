<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="#F8F8F8"
        android:orientation="horizontal"
        android:padding="7dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/topic_setting_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/imagecontent"
            android:src="@drawable/ic_setting" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#C0C0C0" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="30dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="15dp" >

                <ImageView
                    android:id="@+id/topic_iv_random"
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/topic_bg_random" />

                <TextView
                    android:id="@+id/topic_tv_random"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/topic_iv_random"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:text="随机" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingRight="15dp" >

                <ImageView
                    android:id="@+id/topic_iv_0"
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/topic_bg_heart" />

                <TextView
                    android:id="@+id/topic_tv_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/topic_iv_0"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:text="疗伤" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="15dp" >

                <ImageView
                    android:id="@+id/topic_iv_1"
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/topic_bg_insomnia" />

                <TextView
                    android:id="@+id/topic_tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/topic_iv_1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:text="失眠" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingRight="15dp" >

                <ImageView
                    android:id="@+id/topic_iv_2"
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/topic_bg_heart" />

                <TextView
                    android:id="@+id/topic_tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/topic_iv_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:text="真心话" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="15dp" >

                <ImageView
                    android:id="@+id/topic_iv_3"
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/topic_bg_abreact" />

                <TextView
                    android:id="@+id/topic_tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/topic_iv_3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:text="发泄" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingRight="15dp" >

                <ImageView
                    android:id="@+id/topic_iv_4"
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/topic_bg_wordlove" />

                <TextView
                    android:id="@+id/topic_tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/topic_iv_4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:text="小恩爱" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
